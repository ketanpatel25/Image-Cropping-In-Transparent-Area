<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Layoutmain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_framelist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frame List" 
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_getImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Img"
             android:layout_weight="1" />

        <Button
            android:id="@+id/btn_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orientation"
             android:layout_weight="1" />

        <Button
            android:id="@+id/btn_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="crop Img"
             android:layout_weight="1" />

        <Button
            android:id="@+id/btn_savefull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
             android:layout_weight="1" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
             android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/heyelloFrontRelImageLayoutmain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip" >

        <ImageView
            android:id="@+id/heyelloFrontImageViewPhoto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="2dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="2dip" />

        <com.ketan.demo.MyImageView
            android:id="@+id/heyelloFrontImageViewFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

</LinearLayout>